@startuml
skinparam componentStyle uml2

actor "občan" as RC
actor "customer" as CPS
actor "voznik pluga" as SPD
actor "vodja plužne izmene/manager" as MSP

database "Zemljevidi" {
    [Map]
    '[Detailed Map]
}

database "Vremenski podatki\n(Vremenska postaja Celje)" {
    [vremenski podatki]
}

'če zelimo da gr diagram od leve proti desni, ne od zgoraj navzdol'
'left to right direction

package "Snow Plow Route Optimization System" {

  package "UI" {
    [Login Page]
    [customer UI]
    [unregisteredUser UI]
    [manager UI]
    [driver UI]
    '[Plowing Orders UI]
  }

  RC --> [Login Page]
  SPD --> [Login Page]
  MSP --> [Login Page]
  CPS --> [Login Page]

  [Login Page] --> [unregisteredUser UI] : unregisteredUser
  [Login Page] --> [driver UI] : driver
  [Login Page] --> [manager UI] : manager
  [Login Page] --> [customer UI] : customer

  [driver UI] <-> [Plow Navigation Service]
  [unregisteredUser UI] <-- [SnowOnRoads Service]
  [Map] --> [SnowOnRoads Service]
  [driver UI] <-- [SnowOnRoads Service]
  [manager UI] <-- [SnowOnRoads Service]
  [customer UI] <-- [SnowOnRoads Service]
  [manager UI] <-> [Plowing Orders]
  [customer UI] --> [Plowing Orders]
  [Plowing Orders] --> [Plow Navigation Service]
  [Plow Navigation Service] -->  [SnowOnRoads Service]  


  [SnowOnRoads Service] <-- [vremenski podatki]

  ' nekaj primerov drugačne sintakse
  ' elipse lavbi uporablja znotraj proces'
  rectangle "pravokotnik" {
    usecase "elipsa" as elipsa
    usecase "a" as a
    usecase "b" as b
    usecase "c" as c
    ' črtnakana črta'
    a ..> b
    'debelapuščica/dedovanje?'
    a -|> b
    'samo povezava'
    a -- b
    '.left./.right./.up./.down. pove usmerjenost'
    b -right-> c
  }
}
@enduml