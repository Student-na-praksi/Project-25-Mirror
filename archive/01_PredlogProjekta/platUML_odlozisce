@startuml
skinparam componentStyle uml2

actor "občan" as RC


database "Vremenski podatki\n(Vremenska postaja Celje)" {
    [vremenski podatki]
}

'če zelimo da gr diagram od leve proti desni, ne od zgoraj navzdol'
'left to right direction

package "Snow Plow Route Optimization System" {


  ' nekaj primerov drugačne sintakse
  ' elipse lavbi uporablja znotraj proces'
  rectangle "pravokotnik" {
    usecase "elipsa" as elipsa
    usecase "a" as a
    usecase "b" as b
    usecase "c" as c
    ' črtnakana črta'
    a ..> b
    'debelapuščica/dedovanje?'
    a -|> b
    'samo povezava'
    a -- b
    '.left./.right./.up./.down. pove usmerjenost'
    b -right-> c
  }
}
@enduml